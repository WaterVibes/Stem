# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:5000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-secret-key

# Media Storage
NEXT_PUBLIC_MEDIA_BUCKET_URL=https://your-storage-bucket.com
NEXT_PUBLIC_UPLOAD_MAX_SIZE=100000000

# Storage Provider Configuration
STORAGE_PROVIDER=mock # Options: mock, aws, gcs

# AWS S3 Configuration (if using AWS)
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Cloud Storage Configuration (if using GCS)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_STREAMING=false
NEXT_PUBLIC_ENABLE_COMMENTS=true 